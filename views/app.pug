extends layout.pug 

block content
    section.namecard
        div.namecard-login
            if name
                p.namecard-greeting Welcome, #{name}!
                form.namecard-exit(action="/goodbye", method="post") 
                    button(type="submit")
                        img(src="/static/img/close.svg")
            else
                p.namecard-greeting Hello, student!
        block intro
    block card   